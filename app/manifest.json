{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.0",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icons/icon-16.png",
    "128": "images/icons/icon-128.png"
  },
  "web_accessible_resources": ["images/*.svg"],
  "browser_action": {
    "default_icon": {
      "19": "images/icons/icon-19.png",
      "38": "images/icons/icon-38.png"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup/popup.html"
  },
  "content_scripts": [
     {
     "matches": [ "https://*.wikipedia.org/*" ],
     "js": [ "pages/popup/popup.js" ],
     "css": [ "pages/popup/popup.css" ]
    }
  ],

  "background": {
    "scripts": [
      "scripts/prototypeController.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "history",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "https://*.wikipedia.org/*"
  ]
}
